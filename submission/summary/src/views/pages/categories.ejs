<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head.ejs%>
    <title>Categories</title>
</head>

<body>
    <% include ../partials/nav.ejs %>

    <div class="container" id="container">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item mr-2">
                    <button type="button" class="btn btn-info" data-toggle="modal" data-target="#newCategory">New</button>
                </li>
                <li class="nav-item mr-2">
                    <button type="button" class="btn btn-info" v-on:click="onDelete">Delete</button>
                </li>
            </ul>
        </nav>

        <table class="table" v-if="categories.length > 0">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col">Created At</th>
                    <th scope="col"><input type="checkbox" v-on:change="onSelected" v-model="selectedAll"></th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="(cate,index) in categories">
                    <td scope="col">{{index+1}}</th>
                    <td scope="col" data-toggle="modal" data-target="#modifyCategory" v-on:click="onModifyCate(index)">{{cate.category}}</td>
                    <td scope="col">{{cate.createdAt}}</td>
                    <td scope="col"><input type="checkbox" v-model="selected[index]"></td>
                </tr>
            </tbody>
        </table>
        <h5 class="text-center mt-5" v-else>No Datas, please add them.</h5>

        <div id="newCategory" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Create New Category</h4>
                    </div>
                    <div class="modal-body">
                        <table class="m-auto">
                            <tr>
                                <td colspan="2">
                                    <label for="title">Category Title:</label><br>
                                    <input type="text" name="title" class="w-100" v-model="category.title">
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button id="btnNewJoke" type="button" class="btn btn-default" data-dismiss="modal" v-on:click="createNewCate">Confirm</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="modifyCategory" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Modify Category: <small>{{modifiedCategory._id}}</small></h4>
                        
                    </div>
                    <div class="modal-body">
                        <table class="m-auto">
                            <tr>
                                <td colspan="2">
                                    <label for="title">Category Title:</label><br>
                                    <input type="text" name="title" class="w-100" v-model="modifiedCategory.title">
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button id="btnNewJoke" type="button" class="btn btn-default" data-dismiss="modal" v-on:click="modifyCate">Confirm</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="js/categories.js"></script>
</body>

</html>